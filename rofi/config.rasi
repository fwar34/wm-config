configuration {
  modi: "drun,window,combi,ssh";
  font: "JetBrainsMono Nerd Font Mono 15";
  show-icons: true;
  display-drun: "";
  drun-display-format: "{name}";
  sidebar-mode: false;
}

//@theme "/dev/null"

* {
  bg: #151515;
  fg: #d0d0d0;
  al: #1f1f1f;
  font: "JetBrainsMono Nerd Font Mono 15";
  background-color: @bg;
  text-color: @fg;
}

window {
  border-radius: 10px;
  width: 50%;
  padding: 10px;
}

prompt {
  background-color: @al;
  enabled: true;
  padding: 0.5% 10px 0% -0.5%;
}

entry {
  background-color: @al;
  placeholder-color: @fg;
  expand: true;
  horizontal-align: 0;
  padding: 0.15% 0% 0% 0%;
}

inputbar {
  children: [ prompt, entry ];
  background-color: @al;
  expand: false;
  border-radius: 10px;
  margin: 0%;
  padding: 10px;
}

listview {
  columns: 4;
  lines: 3;
  spacing: 0%;
  cycle: false;
  dynamic: true;
  layout: vertical;
}

mainbox {
  border-radius: 0%;
  children: [ inputbar, listview ];
  spacing: 2%;
  padding: 2% 1% 2% 1%;
}

element {
  orientation: vertical;
  border-radius: 0%;
  padding: 2% 0% 2% 0%;
}

element-text {
  expand: true;
  horizontal-align: 0.5;
  vertical-align: 0.5;
  margin: 0.5% 0.5% -0.5% 0.5%;
}

element-text, element-icon {
  background-color: inherit;
  text-color: inherit;
}

element selected {
  background-color: @al;
  border-radius: 10px;
}
@theme "/usr/share/rofi/themes/Paper.rasi"

// https://github.com/davatorium/rofi/issues/1185#issuecomment-692870336
// put after load theme, modify icon size
element-icon {
  size: 25px;
  border: 0px;
  horizontal-align: 0.5;
}
